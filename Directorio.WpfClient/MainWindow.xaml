<Window x:Class="Directorio.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Directorio.WpfClient"
        xmlns:vm="clr-namespace:Directorio.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="Registro de Usuario" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
    >

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E0E0E0" CornerRadius="5" Margin="25">
            <Path Data="M20.5,16.5L16,12L11.5,16.5L7.5,12.5L2,18H22Z" 
                  Fill="#A0A0A0" Stretch="Uniform" Margin="40"/>
        </Border>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="25,0,50,0" MinWidth="300">
            <TextBlock Text="Nombre" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                     Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Apellido Paterno" FontWeight="SemiBold"/>
            <TextBox Text="{Binding ApellidoPaterno, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                     Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Apellido Materno" FontWeight="SemiBold"/>
            <TextBox Text="{Binding ApellidoMaterno, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Identificación" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Identificacion, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                     Margin="0,5,0,15" Padding="5"/>

            <Button Command="{Binding RegistrarCommand}" Content="Enviar" 
                    HorizontalAlignment="Left" Padding="25,10" Margin="0,10,0,0" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>